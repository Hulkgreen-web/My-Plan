<Window x:Class="MyPlan.EpargneView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion de l'Épargne" Height="550" Width="750"
        Background="#FFF9F5" FontFamily="Georgia" FontSize="14"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Styles réutilisés -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFCC80"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFCC80"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FFF5E5"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FFA726"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titre -->
            <RowDefinition Height="Auto"/>
            <!-- Formulaire -->
            <RowDefinition Height="*"/>
            <!-- Liste -->
            <RowDefinition Height="Auto"/>
            <!-- Boutons -->
        </Grid.RowDefinitions>

        <!-- En-tête orange -->
        <Border Grid.Row="0" Background="#FFA726" Padding="10" Margin="0,0,0,15">
            <TextBlock Text="Gestion des Épargnes" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       FontFamily="Verdana"/>
        </Border>

        <!-- Formulaire -->
        <Border Grid.Row="1" Background="#FFE0B2" Padding="10" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="NomEpargneBox" Width="200" Margin="0,0,10,0"
                         ToolTip="Nom de l'épargne"/>

                <TextBox x:Name="MontantEpargneBox" Width="120" Margin="0,0,10,0"
                         ToolTip="Montant initial"/>

                <Button Content="Créer / Modifier" Width="150"
                        Background="#FB8C00" Click="CreerModifier_Click"/>

                <Button Content="Ajouter +" Width="120" Margin="10,0,0,0"
                        Background="#FFB74D" Click="AjouterArgent_Click"
                        ToolTip="Ajouter un montant à l'épargne sélectionnée"/>
            </StackPanel>
        </Border>

        <!-- Liste des épargnes -->
        <Border Grid.Row="2" Background="White" BorderBrush="#FFCC80" BorderThickness="1">
            <DataGrid x:Name="ListeEpargnes"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      SelectionMode="Single" 
                      SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom" Binding="{Binding nom}" Width="*"/>
                    <DataGridTextColumn Header="Montant (€)" Binding="{Binding montant, StringFormat=N2}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Boutons bas -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Supprimer" Width="120"
                    Background="#F44336" Click="Supprimer_Click"
                    Margin="0,0,10,0"
                    ToolTip="Supprimer l'épargne sélectionnée"/>

            <Button Content="Fermer" Width="100"
                    Background="#FFA726" Click="Fermer_Click"/>
        </StackPanel>
    </Grid>
</Window>